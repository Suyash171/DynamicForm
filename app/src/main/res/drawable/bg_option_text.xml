<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#2b7cc0" />
                </shape>
            </item>
            <item>
                <inset android:insetTop="1dp" android:insetRight="1dp" android:insetBottom="1dp" android:insetLeft="1dp">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff" />
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#bcbcbc" />
                </shape>
            </item>
            <item>
                <inset android:insetTop="1dp" android:insetRight="1dp" android:insetBottom="1dp" android:insetLeft="1dp">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff" />
                    </shape>
                </inset>
            </item>
        </layer-list>

    </item>
</selector>